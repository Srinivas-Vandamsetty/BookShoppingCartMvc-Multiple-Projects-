@page
@model RegisterModel

@{
    ViewData["Title"] = "Sign Up";
}

<!-- Fullscreen background image container -->
<div class="min-vh-100 d-flex justify-content-center align-items-center"
     style="background-image: url('/images/BookImage.jpg'); background-size: cover; background-position: center;">

    <div class="card p-4 shadow-lg border-0 w-100"
         style="max-width: 500px; background-color: rgba(255, 255, 255, 0.15); backdrop-filter: blur(10px); border-radius: 20px;">

        <h3 class="text-white text-center fw-bold mb-4">CREATE ACCOUNT</h3>

        <form id="SignUpForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

            <!-- User Name -->
            <div class="input-group mb-3 rounded-pill shadow-sm">
                <span class="input-group-text bg-white border-0 rounded-start-pill">
                    <i class="bi bi-person-fill text-primary"></i>
                </span>
                <input asp-for="Input.UserName" class="form-control border-0 rounded-end-pill" placeholder="Username" />
            </div>
            <span asp-validation-for="Input.UserName" class="text-danger"></span>

            <!-- Email -->
            <div class="input-group mb-3 rounded-pill shadow-sm">
                <span class="input-group-text bg-white border-0 rounded-start-pill">
                    <i class="bi bi-envelope-fill text-primary"></i>
                </span>
                <input asp-for="Input.Email" class="form-control border-0 rounded-end-pill" autocomplete="username" placeholder="Email" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <!-- Password -->
            <div class="input-group mb-3 rounded-pill shadow-sm">
                <input asp-for="Input.Password" type="password" class="form-control border-0 rounded-start-pill" autocomplete="new-password" placeholder="Password" />
                <span class="input-group-text bg-white border-0 rounded-end-pill">
                    <i class="bi bi-lock-fill text-primary"></i>
                </span>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <!-- Confirm Password -->
            <div class="input-group mb-3 rounded-pill shadow-sm">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control border-0 rounded-start-pill" autocomplete="new-password" placeholder="Confirm Password" />
                <span class="input-group-text bg-white border-0 rounded-end-pill">
                    <i class="bi bi-lock-fill text-primary"></i>
                </span>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <!-- Phone Number -->
            <div class="input-group mb-4 rounded-pill shadow-sm">
                <span class="input-group-text bg-white border-0 rounded-start-pill">
                    <i class="bi bi-telephone-fill text-primary"></i>
                </span>
                <input asp-for="Input.PhoneNumber" class="form-control border-0 rounded-end-pill" placeholder="Phone Number" />
            </div>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

            <!-- Sign Up Button -->
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-light fw-bold w-50 rounded-pill py-2">SIGN UP</button>
            </div>

            <!-- Optional login link -->
            <div class="text-center mt-3">
                <a asp-page="./Login" class="text-info">Already have an account? Login</a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons (if not already included globally) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
