@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav flex-column">
    <li class="nav-item mb-2">
        <a class="nav-link py-2 px-3 rounded-3 @ManageNavPages.IndexNavClass(ViewContext)" asp-page="./Index"
           style="color: #34495e; background-color: #eaf2f8;">
            <i class="bi bi-person-circle me-2"></i> Profile
        </a>
    </li>
    <li class="nav-item mb-2">
        <a class="nav-link py-2 px-3 rounded-3 @ManageNavPages.EmailNavClass(ViewContext)" asp-page="./Email"
           style="color: #34495e;">
            <i class="bi bi-envelope-at-fill me-2"></i> Email
        </a>
    </li>
    <li class="nav-item mb-2">
        <a class="nav-link py-2 px-3 rounded-3 @ManageNavPages.ChangePasswordNavClass(ViewContext)" asp-page="./ChangePassword"
           style="color: #34495e;">
            <i class="bi bi-shield-lock-fill me-2"></i> Password
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li class="nav-item mb-2">
            <a class="nav-link py-2 px-3 rounded-3 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins"
               style="color: #34495e;">
                <i class="bi bi-box-arrow-in-right me-2"></i> External Logins
            </a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link py-2 px-3 rounded-3" href="/UserOrder/UserOrders"
           style="color: #34495e;">
            <i class="bi bi-bag-check-fill me-2"></i> My Orders
        </a>
    </li>
</ul>
