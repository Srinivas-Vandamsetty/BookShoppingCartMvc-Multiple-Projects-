@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section position-relative text-center text-white" style="background: url('/images/AboutUsImage.jpg') no-repeat center center/cover; height: 600px;">
    <div class="overlay position-absolute w-100 h-100" style="background: rgba(0, 0, 0, 0.5);"></div>
    <div class="position-absolute top-50 start-50 translate-middle">
        <p class="text-uppercase fw-bold" style="color: orange; letter-spacing: 2px;">Your One-Stop Book Destination</p>
        <h1 class="fw-bold">About Us</h1>
    </div>
</div>

<!-- Why Choose Us Section -->
<div class="container my-5">
    <h2 class="text-center fw-bold"><span style="color: black;">Why </span><span style="color: orange;">Bookverse</span></h2>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="d-flex align-items-start mb-4">
                <div class="icon text-warning me-3">
                    <i class="fas fa-truck fa-2x"></i>
                </div>
                <div>
                    <h5 class="fw-bold">Home Delivery</h5>
                    <p>Enjoy fast and reliable doorstep delivery. Order your favorite books from the comfort of your home, and we'll make sure they reach you safely and on time.</p>
                </div>
            </div>
            <div class="d-flex align-items-start mb-4">
                <div class="icon text-warning me-3">
                    <i class="fas fa-tags fa-2x"></i>
                </div>
                <div>
                    <h5 class="fw-bold">Best Price</h5>
                    <p>We offer affordable prices and exclusive discounts so you can get your favorite books without breaking the bank. Get the best deals every day!</p>
                </div>
            </div>
            <div class="d-flex align-items-start mb-4">
                <div class="icon text-warning me-3">
                    <i class="fas fa-box fa-2x"></i>
                </div>
                <div>
                    <h5 class="fw-bold">Custom Box</h5>
                    <p>Looking for something special? Create a personalized book box with your favorite genres, authors, or themes. Perfect for gifting or building your dream collection.</p>
                </div>
            </div>
            <div class="d-flex align-items-start">
                <div class="icon text-warning me-3">
                    <i class="fas fa-undo fa-2x"></i>
                </div>
                <div>
                    <h5 class="fw-bold">Quick Refund</h5>
                    <p>Changed your mind? No worries! We offer a seamless refund policy to ensure a stress-free shopping experience.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 custom-img-container">
            <img src="/images/DeliveryImage.jpg" class="img-fluid custom-img" alt="Why Choose Us">
        </div>
    </div>
</div>
