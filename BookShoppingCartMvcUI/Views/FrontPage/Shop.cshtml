@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section position-relative text-center text-white"
     style="background: url('@Url.Content("~/images/ShopImage.jpeg")') no-repeat center center/cover; height: 600px;">
    <div class="overlay position-absolute w-100 h-100" style="background: rgba(0, 0, 0, 0.5);"></div>
    <div class="position-absolute top-50 start-50 translate-middle">
        <p class="text-uppercase fw-bold" style="color: orange; letter-spacing: 2px;">Explore Our Bookstore</p>
        <h1 class="fw-bold">Our Book Store</h1>
    </div>
</div>

<!-- Contact Info Section -->
<div class="container my-5">
    <h2 class="text-center fw-bold"><span style="color: black;">Where to </span><span style="color: orange;">Find Us</span></h2>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="mb-4">
                <h5 class="fw-bold"><i class="fas fa-map-marker-alt text-warning me-2"></i> Address</h5>
                <p>229/A, Madhapur, Hyderabad, Telangana, India</p>
            </div>
            <div class="mb-4">
                <h5 class="fw-bold"><i class="fas fa-envelope text-warning me-2"></i> Email</h5>
                <p><a href="mailto:support@bookverse.com">support@bookverse.com</a></p>
            </div>
            <div class="mb-4">
                <h5 class="fw-bold"><i class="fas fa-phone text-warning me-2"></i> Phone</h5>
                <p>+91 7416923487</p>
            </div>
            <div>
                <h5 class="fw-bold"><i class="fas fa-clock text-warning me-2"></i> Working Hours</h5>
                <p>Mon - Sat: 09:00 AM to 8:00 PM<br>Sunday: Closed</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="ratio ratio-4x3 shadow rounded">
                <iframe src="https://www.google.com/maps?q=Madhapur,+Hyderabad,+Telangana,+India&output=embed"
                        width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen=""
                        loading="lazy">
                </iframe>
            </div>
        </div>
    </div>
</div>
