@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section with Background Image -->
<div class="hero-section position-relative text-center text-white" style="background: url('/images/FrontPage.jpg') no-repeat center center/cover; height: 600px;">
    <div class="overlay position-absolute w-100 h-100" style="background: rgba(0, 0, 0, 0.5);"></div>

    <div class="position-absolute top-50 start-50 translate-middle">
        <p class="text-uppercase fw-bold" style="color: orange; letter-spacing: 2px;">Bookverse</p>
        <h1 class="fw-bold">Explore a World of Books</h1>
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-lg me-2 px-4">Browse Books</a>
            <a href="/ContactUs" class="btn btn-outline-light btn-lg px-4">Contact Us</a>
        </div>
    </div>
</div>

<!-- Service Block Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="service-item">
                <div class="icon d-inline-block border border-warning rounded-circle p-3">
                    <i class="fas fa-shipping-fast text-warning fa-2x"></i>
                </div>
                <h5 class="fw-bold mt-3">Free Shipping</h5>
                <p>When order over ₹499</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-item">
                <div class="icon d-inline-block border border-warning rounded-circle p-3">
                    <i class="fas fa-phone-volume text-warning fa-2x"></i>
                </div>
                <h5 class="fw-bold mt-3">24/7 Support</h5>
                <p>Get support all day</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-item">
                <div class="icon d-inline-block border border-warning rounded-circle p-3">
                    <i class="fas fa-sync text-warning fa-2x"></i>
                </div>
                <h5 class="fw-bold mt-3">Refund</h5>
                <p>Get refund within 3 days!</p>
            </div>
        </div>
    </div>
</div>

