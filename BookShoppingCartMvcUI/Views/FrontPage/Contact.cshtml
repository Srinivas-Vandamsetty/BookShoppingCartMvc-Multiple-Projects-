@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section position-relative text-center text-white" style="background: url('/images/ContactUsImage.jpg') no-repeat center center/cover; height: 600px;">
    <div class="overlay position-absolute w-100 h-100" style="background: rgba(0, 0, 0, 0.5);"></div>
    <div class="position-absolute top-50 start-50 translate-middle">
        <p class="text-uppercase fw-bold" style="color: orange; letter-spacing: 2px;">We’re Here to Help</p>
        <h1 class="fw-bold">Contact Us</h1>
    </div>
</div>

<!-- Contact Info Section -->
<div class="container my-5">
    <h2 class="text-center fw-bold mb-4">
        <span style="color: black;">Get in </span><span style="color: orange;">Touch</span>
    </h2>
    <div class="row">
        <!-- Contact Details -->
        <div class="col-md-6 mb-4">
            <div class="mb-3 d-flex align-items-start">
                <i class="fas fa-map-marker-alt fa-lg text-warning me-3 mt-1"></i>
                <div>
                    <h5 class="fw-bold">Address</h5>
                    <p>229/A, Madhapur, Hyderabad, Telangana.</p>
                </div>
            </div>

            <div class="mb-3 d-flex align-items-start">
                <i class="fas fa-envelope fa-lg text-warning me-3 mt-1"></i>
                <div>
                    <h5 class="fw-bold">Email</h5>
                    <p><a href="mailto:support@bookverse.com">support@bookverse.com</a></p>
                </div>
            </div>

            <div class="mb-3 d-flex align-items-start">
                <i class="fas fa-phone fa-lg text-warning me-3 mt-1"></i>
                <div>
                    <h5 class="fw-bold">Phone</h5>
                    <p><a href="tel:+917416923487">+91 74169 23487</a></p>
                </div>
            </div>

            <div class="mb-3 d-flex align-items-start">
                <i class="fas fa-clock fa-lg text-warning me-3 mt-1"></i>
                <div>
                    <h5 class="fw-bold">Working Hours</h5>
                    <p>Mon - Sat: 9:00 AM to 8:00 PM<br>Sun: Closed</p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label fw-bold">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Your Name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label fw-bold">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Write your message here..."></textarea>
                </div>
                <button type="submit" class="btn btn-warning px-4">Send Message</button>
            </form>
        </div>
    </div>
</div>
