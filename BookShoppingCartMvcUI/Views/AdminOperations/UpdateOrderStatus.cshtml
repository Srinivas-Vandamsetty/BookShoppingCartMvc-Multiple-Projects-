@using BookShoppingCart.Models.Models.DTOs
@model UpdateOrderStatusModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "UpdatePaymentStatus";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil-square me-2"></i>Update Order Status</h2>
        <a class="btn btn-outline-primary" asp-action="AllOrders">
            <i class="bi bi-arrow-left-circle me-1"></i>Back
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="UpdateOrderStatus" class="needs-validation" novalidate>

                <!-- Hidden field to hold the order ID -->
                <input type="hidden" asp-for="OrderId" />

                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-clipboard-check me-1"></i>Select Order Status</label>
                    <select class="form-select" asp-for="OrderStatusId" asp-items="@Model.OrderStatusList" required>
                        <option value="">-- Select Status --</option>
                    </select>
                    <span class="text-danger" asp-validation-for="OrderStatusId"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Update
                </button>

                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-1"></i>@TempData["msg"]
                    </div>
                }
            </form>
        </div>
    </div>
</div>
