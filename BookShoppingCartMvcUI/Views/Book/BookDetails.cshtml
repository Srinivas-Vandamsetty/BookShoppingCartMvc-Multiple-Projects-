@model BookShoppingCart.Models.Models.Book

@{
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5 bg-light d-flex align-items-center justify-content-center p-4">
                <img src="/images/@(string.IsNullOrWhiteSpace(Model.Image) ? "NoImage.png" : Model.Image)"
                     alt="@Model.BookName"
                     class="img-fluid rounded-4 shadow-sm"
                     style="max-height: 450px; object-fit: contain;" />
            </div>
            <div class="col-md-7 p-5 d-flex flex-column justify-content-center">
                <h2 class="fw-bold text-dark mb-3">@Model.BookName</h2>

                <div class="mb-3">
                    <span class="badge bg-secondary me-2"><i class="bi bi-person"></i> @Model.AuthorName</span>
                </div>

                <div class="mb-4">
                    <strong class="fs-4 text-success">₹@Model.Price.ToString("N2")</strong>
                </div>

                <div class="d-flex gap-3">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark rounded-pill px-4 py-2">
                        <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>
