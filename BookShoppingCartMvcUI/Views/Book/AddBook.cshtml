@using BookShoppingCart.Models.Models.DTOs
@model BookDTO
@{
    Layout = "_AdminLayout";
}

<div class="container my-4" style="max-width: 600px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text--bs-gray-dark fw-bold">📚 Add Book</h2>
        <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <form asp-action="AddBook" enctype="multipart/form-data" class="shadow-lg p-4 bg-white rounded-4" style="box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);">
        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Book Name*</label>
            <input type="text" class="form-control" asp-for="BookName" />
            <span asp-validation-for="BookName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Author Name*</label>
            <input type="text" class="form-control" asp-for="AuthorName" />
            <span asp-validation-for="AuthorName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Genre*</label>
            <select class="form-select" asp-for="GenreId" asp-items="Model.GenreList">
                <option value="">-- Select Genre --</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Price*</label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Book Cover Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning w-100">
                <i class="bi bi-plus-circle"></i> Add Book
            </button>
        </div>
    </form>
</div>
