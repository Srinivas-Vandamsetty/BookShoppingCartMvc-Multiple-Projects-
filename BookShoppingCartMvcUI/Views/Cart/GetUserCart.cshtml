@using BookShoppingCart.Models.Models
@model ShoppingCart

@{
    ViewData["Title"] = "GetUserCart";

    string couponCode = ViewBag.CouponCode as string ?? "";
    decimal itemTotal = ViewBag.ItemTotal ?? 0m;
    decimal discountRate = ViewBag.DiscountRate ?? 0m;
    decimal discountAmount = ViewBag.DiscountAmount ?? 0m;
    decimal shippingCharge = ViewBag.ShippingCharge ?? 0m;
    decimal finalTotal = ViewBag.FinalTotal ?? 0m;
    bool isValidCoupon = discountRate > 0;
}

<div class="container my-5">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <div class="row">
            <!-- Shopping Cart Left Section -->
            <div class="col-lg-8">
                <h4 class="mb-4">Shopping Cart <span class="badge bg-warning text-black">@Model.CartDetails.Count Items</span></h4>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="border-bottom">
                            <tr>
                                <th scope="col">Product Details</th>
                                <th scope="col" class="text-center">Quantity</th>
                                <th scope="col" class="text-end">Price</th>
                                <th scope="col" class="text-end">Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartDetails)
                            {
                                <tr>
                                    <td class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(item.Book.Image) ? "/images/NoImage.png" : $"/images/{item.Book.Image}")"
                                             class="img-thumbnail me-3"
                                             style="width: 80px; height: 100px; object-fit: cover;" />
                                        <div>
                                            <h6 class="mb-1">@item.Book.BookName</h6>
                                            <small class="badge bg-info text-black">@item.Book.Genre.GenreName</small><br />
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center align-items-center">
                                            <a class="btn btn-outline-secondary btn-sm" href="/cart/removeitem?bookid=@item.BookId">−</a>
                                            <span class="px-2">@item.Quantity</span>
                                            @if (item.Quantity < item.Book.Stock.Quantity)
                                            {
                                                <a class="btn btn-outline-secondary btn-sm" href="/Cart/AddItem?bookId=@item.BookId&redirect=1">+</a>
                                            }
                                            else
                                            {
                                                <span class="text-danger small ms-2"><strong>Out of stock</strong></span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-end">₹@item.Book.Price.ToString("0.00")</td>
                                    <td class="text-end">₹@((item.Book.Price * item.Quantity).ToString("0.00"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/" class="badge bg-warning text-black">&larr; Continue Shopping</a>
            </div>

            <!-- Order Summary Right Section -->
            <div class="col-lg-4">
                <div class="card p-4 shadow-sm">
                    <h5 class="mb-3">Order Summary</h5>

                    <div class="d-flex justify-content-between">
                        <span>Items Total</span>
                        <span>₹@itemTotal.ToString("0.00")</span>
                    </div>

                    <form method="get" class="my-2">
                        <label class="form-label">Select Coupon</label>
                        <div class="input-group">
                            <select name="coupon" class="form-select">
                                <option value="">-- Select Coupon --</option>
                                <option value="SAVE10" selected="@(couponCode?.ToUpper() == "SAVE10" ? "selected" : null)">SAVE10 (10% off)</option>
                                <option value="SAVE20" selected="@(couponCode?.ToUpper() == "SAVE20" ? "selected" : null)">SAVE20 (20% off)</option>
                                <option value="FLAT50" selected="@(couponCode?.ToUpper() == "FLAT50" ? "selected" : null)">FLAT50 (50% off)</option>
                            </select>
                            <button type="submit" class="btn btn-outline-secondary">Apply</button>
                        </div>
                        @if (!string.IsNullOrEmpty(couponCode) && !isValidCoupon)
                        {
                            <div class="text-danger small mt-1">Invalid coupon code.</div>
                        }
                    </form>

                    @if (isValidCoupon && discountRate > 0)
                    {
                        <div class="d-flex justify-content-between text-success">
                            <span>Discount (@(discountRate * 100)%)</span>
                            <span>-₹@discountAmount.ToString("0.00")</span>
                        </div>
                    }

                    <hr />

                    <div class="mb-3">
                        <label class="form-label">Shipping</label>
                        @if (shippingCharge == 0)
                        {
                            <select class="form-select" disabled>
                                <option selected>Free Shipping</option>
                            </select>
                        }
                        else
                        {
                            <select class="form-select" disabled>
                                <option selected>Standard Delivery - ₹@shippingCharge.ToString("0.00")</option>
                            </select>
                        }
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total Cost</strong>
                        <strong>₹@finalTotal.ToString("0.00")</strong>
                    </div>

                    <a href="/Cart/Checkout" class="btn btn-primary w-100">Checkout</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <img src="/images/EmptyCartImage.png" alt="Empty Cart" class="img-fluid" style="max-width: 250px;" />
            <h2 class="mt-4 text-danger">Your cart is empty</h2>
            <p class="lead mt-2"><strong>Looks like you haven’t added anything to your cart yet.</strong></p>
            <a href="/" class="btn btn-primary mt-3">Start Shopping</a>
        </div>
    }
</div>
