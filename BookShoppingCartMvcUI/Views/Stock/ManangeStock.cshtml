@model StockDTO
@{
    Layout = "_AdminLayout";
}

<div class="container my-4" style="max-width: 600px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text--bs-gray-dark fw-bold">📦 Manage Stock</h2>
        <a asp-action="Index" asp-controller="Stock" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <form asp-action="ManangeStock" class="shadow-lg p-4 bg-white rounded-4" style="box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);">
        <input type="hidden" asp-for="BookId" />

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Quantity*</label>
            <input type="number" class="form-control" asp-for="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger small"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning w-100">
                <i class="bi bi-arrow-repeat"></i> Update Stock
            </button>
        </div>
    </form>
</div>
