@model BookShoppingCart.Models.Models.Genre

@{
    Layout = "_AdminLayout";
}

<div class="container my-4" style="max-width: 600px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text--bs-gray-dark">🎭 Update Genre</h2>
        <a asp-action="Index" asp-controller="Genre" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <form asp-action="UpdateGenre" method="post" class="shadow-lg p-4 bg-white rounded-4" style="box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Genre Name*</label>
            <input type="text" class="form-control" asp-for="GenreName" />
            <span asp-validation-for="GenreName" class="text-danger small"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning w-100">
                <i class="bi bi-pencil-square"></i> Update Genre
            </button>
        </div>
    </form>
</div>
