<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome and Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/footer.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <!-- Include Header -->
    <partial name="_Navbar" />

    <div class="d-flex">
        <!-- Sidebar (Static) -->
        <div class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <ul class="list-unstyled">
                <li><a class="text-white text-decoration-none d-block py-2" href="/Genre/Index"><i class="bi bi-collection"></i> Genre</a></li>
                <li><a class="text-white text-decoration-none d-block py-2" href="/Book/Index"><i class="bi bi-book"></i> Books</a></li>
                <li><a class="text-white text-decoration-none d-block py-2" href="/Stock/Index"><i class="bi bi-archive"></i> Stock</a></li>
            </ul>
        </div>

        <!-- Content Area -->
        <div class="flex-grow-1 p-4">
            <div class="my-2">
                <partial name="_Notifications" />
            </div>
            @RenderBody()
        </div>
    </div>

    <!-- Include Footer -->
    <partial name="_Footer" />

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
